  #
  # First, create some sample data
  date_values <- seq(as.Date("2020-01-01"), as.Date("2020-01-07"), by = "days")
  y_values <- rnorm(7)
  
  # Then, create a data frame with the data
  data <- data.frame(date_values, y_values)
  
  # Next, find the maximum y value and its corresponding x value
  max_y <- max(data$y_values)
  max_x <- data[data$y_values == max_y, "date_values"]
  
  # Finally, use ggplot2 to create the plot, highlighting the maximum point in red
  ggplot(data, aes(x = date_values, y = y_values)) +
    geom_line() +
    geom_point(data = data.frame(x = max_x, y = max_y), 
               aes(x = x, y = y), color = "red")

  ## Next, find the minimum y value and its corresponding x value
  min_y <- min(data$y_values)
  min_x <- data[data$y_values == min_y, "date_values"]
  
  # Finally, use ggplot2 to create the plot, adding a green rectangle at the minimum y value
  ggplot(data, aes(x = date_values, y = y_values)) +
    geom_line() +
    geom_rect(data = data.frame(xmin = min_x, 
                                xmax = min_x, 
                                ymin = min_y, 
                                ymax = min_y), 
              aes(xmin = xmin, xmax = xmax, ymin = ymin, ymax = ymax), 
              fill = "green")
  
  ###ERROR. You can't create a box outta nuthin' silly Chat_GPT!
  
  #chloe solution (super hacky, and just based off of previous 
  #code generated by the chat bot)
  
  ggplot(data) +
    geom_line(aes(x = date_values, y = y_values)) +
    geom_rect(data = data.frame(xmin = min_x, 
                                xmax = max_x, 
                                ymin = min_y, 
                                ymax = max_y), 
              aes(xmin = xmin, xmax = xmax, ymin = ymin, ymax = ymax), 
              fill = "green")
  
